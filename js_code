// Action when Buy Now is clicked
function buyProduct(name) {
  alert("Success! " + name + " has been added to your shopping cart. üõí");
}

// Action for Dark Mode Toggle
function toggleDarkMode() {
  document.body.classList.toggle("dark");
}
